<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_bottomCardview"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/playercontroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <SeekBar
            android:id="@+id/seekbar_volum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/btn_player_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/play" />

        <ImageView
            android:id="@+id/btn_player_pre"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/btn_player_play"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/btn_player_play"
            app:srcCompat="@drawable/rewind" />

        <ImageView
            android:id="@+id/btn_player_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/btn_player_play"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/btn_player_play"
            app:srcCompat="@drawable/forward" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/seekbar_volum"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/volume_24" />

        <ImageView
            android:id="@+id/btn_player_whole"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_player_next"
            android:layout_marginEnd="29dp"
            app:srcCompat="@drawable/wind" />

        <ImageView
            android:id="@+id/btn_player_suffle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/btn_player_pre"
            android:layout_toEndOf="@+id/imageView8"
            app:srcCompat="@drawable/shuffle" />

        <SeekBar
            android:id="@+id/seekBar_duration"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView8"
            android:layout_below="@+id/seekBar_duration"
            android:text="00:00" />

        <TextView
            android:id="@+id/text_endduration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/seekBar_duration"
            android:text="00:00" />

        <TextView
            android:id="@+id/text_onesong"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/btn_player_whole"
            android:layout_alignTop="@+id/btn_player_whole"
            android:gravity="center"
            android:text="1"
            android:textAlignment="center"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
