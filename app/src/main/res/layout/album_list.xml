<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/listitem_cardView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_grouplist"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="29dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/text_grouplist_title"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintLeft_toRightOf="@+id/img_grouplist"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_grouplist_year"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="69dp"
                android:layout_marginTop="9dp"
                android:text="year"
                android:textAlignment="textEnd"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_grouplist_title"
                app:layout_constraintLeft_toRightOf="@+id/text_grouplist_num"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/text_grouplist_num"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="num"
                android:textAlignment="viewStart"
                app:layout_constraintLeft_toRightOf="@+id/img_grouplist"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_grouplist_title" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>