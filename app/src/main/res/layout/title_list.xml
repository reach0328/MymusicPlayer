<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/listitem_cardView"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/img_list"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_list"
            android:id="@+id/text_list_title"
            android:paddingTop="13dp"
            android:paddingLeft="15dp"
            android:textStyle="normal|bold"
            android:textSize="20sp" />

        <TextView
            android:text="Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_list"
            android:id="@+id/text_list_artist"
            android:paddingLeft="20dp"
            android:layout_below="@+id/text_list_title" />

        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_list_title"
            android:layout_toEndOf="@+id/text_list_artist"
            android:layout_marginStart="21dp"
            android:id="@+id/text_list_Time" />
    </RelativeLayout>
</android.support.v7.widget.CardView>