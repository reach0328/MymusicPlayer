<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/listitem_cardView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_list"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="50dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/text_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/img_list"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/text_list_artist"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_list_title"
                android:layout_toEndOf="@+id/img_list"
                android:paddingLeft="20dp"
                android:text="Artist" />

            <TextView
                android:id="@+id/text_list_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/text_list_title"
                android:layout_marginEnd="15dp"
                android:text="Time" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_list_artist"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>