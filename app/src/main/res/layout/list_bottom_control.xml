<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/list_playControl_cardview"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="3dp"
    android:layout_height="50dp">

    <RelativeLayout
        android:id="@+id/List_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_bottom"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/btn_bottom_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="19dp"
            app:srcCompat="@drawable/forward" />

        <ImageView
            android:id="@+id/btn_bottom_pre"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/btn_bottom_next"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/btn_bottom_play"
            app:srcCompat="@drawable/rewind" />

        <TextView
            android:id="@+id/text_bottom_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_bottom_pre"
            android:layout_toEndOf="@+id/img_bottom"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/text_bottom_artist"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_bottom_title"
            android:layout_toEndOf="@+id/img_bottom"
            android:paddingLeft="10dp"
            android:text="artist"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/btn_bottom_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/btn_bottom_pre"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/btn_bottom_next"
            app:srcCompat="@drawable/play" />

        <TextView
            android:id="@+id/text_bottom_musictime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_bottom_artist"
            android:layout_alignBottom="@+id/text_bottom_artist"
            android:layout_toStartOf="@+id/btn_bottom_pre"
            android:text="Time" />

    </RelativeLayout>
</android.support.v7.widget.CardView>